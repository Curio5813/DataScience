   "source": [
    "a = int(input(\"Enter a positive integer number: \"))\n",
    "print(a)\n",
    "while a > 1:\n",
    "    if a % 2 == 1:\n",
    "        a = 3 * a + 1\n",
    "        print(int(a))\n",
    "    if a % 2 == 0:\n",
    "        a = a / 2\n",
    "        print(int(a))"
